<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="badge" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">@dimen/four_padding</item>
        <item name="android:background">@drawable/rectangle_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">@dimen/sixteen_padding</item>
        <item name="android:layout_margin">@dimen/two_padding</item>
        <item name="android:paddingBottom">@dimen/sixteen_padding</item>
        <item name="android:paddingLeft">@dimen/sixteen_padding</item>
        <item name="android:paddingRight">@dimen/sixteen_padding</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
